@Library('csm-shared-library') _

pipeline {
    agent {
        label "metal-gcp-builder"
    }

    options {
        buildDiscarder(logRotator(numToKeepStr: "10"))
        timestamps()
    }

    environment {
        NAME = "cray-psp"
        DESCRIPTION = "Deploys resources to set up PSP in the Cray Kubernetes cluster."
        IS_STABLE = getBuildIsStable()
    }

    stages {
        stage("Build") {
            environment {
                CHART_VERSIONS = getChartVersion(name: "cray-psp",   chartDirectory: "charts", isStable: env.IS_STABLE)
            }
            steps {
                sh "make"
            }
        }

        stage('Publish ') {
            steps {
                script {
                    publishCsmHelmCharts(component: env.NAME, chartsPath: "${WORKSPACE}/packages", isStable: env.IS_STABLE)
                }
            }
        }
    }
}
